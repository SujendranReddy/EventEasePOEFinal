@model IEnumerable<EventEase.Models.EventType>

@{
    ViewData["Title"] = "Event Types";
}

<h1>Event Types</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventTypeName)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventTypeId" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.EventTypeId" class="btn btn-info">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.EventTypeId" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
